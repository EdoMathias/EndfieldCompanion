{
  "manifest_version": 1,
  "type": "WebApp",
  "meta": {
    "name": "Arknights Companion",
    "author": "KofimBadam",
    "version": "1.1.0",
    "minimum-overwolf-version": "0.160.0",
    "description": "An Overwolf app for Arknights: Endfield",
    "dock_button_title": "ArknightsCompanion",
    "icon": "img/logo-dock.png",
    "icon_gray": "img/logo-dock-gray.png",
    "launcher_icon": "icons/launcher_icon.ico",
    "window_icon": "img/logo-window.png"
  },
  "permissions": [
    "Extensions",
    "Hotkeys",
    "GameInfo",
    "DesktopStreaming",
    "Tray"
  ],
  "data": {
    "start_window": "background",
    "hotkeys": {
      "ToggleInGameMain": {
        "title": "Toggle In-Game Main",
        "action-type": "custom",
        "default": "Ctrl+T"
      },
      "ToggleDesktopMain": {
        "title": "Toggle Desktop Main",
        "action-type": "custom",
        "default": "Ctrl+Shift+T"
      },
      "ToggleInGameRotation": {
        "title": "Toggle In-Game Rotation",
        "action-type": "custom",
        "default": "Ctrl+R"
      }
    },
    "externally_connectable": {
      "matches": [
        "http://*.overwolf.com",
        "https://*.overwolf.com",
        "https://*.google-analytics.com",
        "http://*.google-analytics.com",
        "https://www.googleapis.com",
        "https://*.kofim.dev"
      ]
    },
    "force_browser": "user",
    "windows": {
      "background": {
        "file": "background.html",
        "background_optimization": true,
        "is_background_page": true
      },
      "main_desktop": {
        "file": "main_desktop.html",
        "desktop_only": true,
        "native_window": true,
        "resizable": true,
        "transparent": true,
        "override_on_update": true,
        "grab_keyboard_focus": true,
        "size": {
          "width": 1600,
          "height": 800
        },
        "min_size": {
          "width": 1600,
          "height": 800
        }
      },
      "main_ingame": {
        "file": "main_ingame.html",
        "in_game_only": true,
        "resizable": true,
        "transparent": true,
        "override_on_update": true,
        "grab_keyboard_focus": true,
        "size": {
          "width": 1600,
          "height": 800
        },
        "min_size": {
          "width": 1600,
          "height": 800
        }
      }
    },
    "uninstall_window": {
      "file": "uninstall.html"
    },
    "game_targeting": {
      "type": "dedicated",
      "game_ids": [
        27724
      ]
    },
    "game_events": [
      27724
    ],
    "launch_events": [
      {
        "event": "GameLaunch",
        "event_data": {
          "game_ids": [
            27724
          ]
        },
        "start_minimized": true
      }
    ],
    "developer": {
      "enable_auto_refresh": true,
      "reload_delay": 5000,
      "filter": "*.*"
    }
  }
}